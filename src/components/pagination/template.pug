
mixin pagination(data)
  .pagination&attributes(attributes)
      a._load.btn.btn--gray.btn--block(href="#") Показать еще 30 товаров
      ._prev
        a(href="#")
          +svg('arrow-right') 

      - var n = 1;
      while n < 11
        if n === 1
          ._item
            span= n++
        else if n === 4
          - n++
          ._item.d-none_xs
            a(href="#") 4
        else if n === 5
          - n++
          ._item
            a(href="#") ...
        else if n < 10 && n > 5
          - n++
        else
          ._item
            a(href="#")= n++
      ._next
        a(href="#")
          +svg('arrow-right')



mixin paginationNewsView(data)
  .pagination.-news-view&attributes(attributes)
      ._prev
        a(href="#")
          +svg('arrow-right')
        span Предыдущая новость

      ._buttons
        a.btn.-xs.-border.-gray(href="#") В каталог новостей

      ._next
        span Следующая новость
        a(href="#")
          +svg('arrow-right')